<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", books_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_book_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", book_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      <p>
        <b><%= t("activerecord.attributes.book.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
        <%= @book.name %>
      </p>
      <p>
        <b><%= t("activerecord.attributes.book.description", :default => t("activerecord.labels.description", :default => "Description")) %>:</b>
        <%= @book.description %>
      </p>
      <p>
        <b><%= t("activerecord.attributes.book.author", :default => t("activerecord.labels.author", :default => "Author")) %>:</b>
        <%= @book.author %>
      </p>
      <p>
        <b><%= t("activerecord.attributes.book.printed", :default => t("activerecord.labels.printed", :default => "Printed")) %>:</b>
        <%= @book.printed %>
      </p>
      <p>
        <b><%= t("activerecord.attributes.book.ringed", :default => t("activerecord.labels.ringed", :default => "Ringed")) %>:</b>
        <%= @book.ringed %>
      </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_book_path(@book), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), book_path(@book), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>