<h1>Libros</h1>
<div class="block" id="block-login">
	<h2>Sign in</h2>
	<div class="content login">
     <%= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form login" } do |f| %>
			<div class="group wat-cf">
		    <div class="left"><%= f.label :email, :class => "label right" %></div>
		  	<div class="right"><%= f.text_field :email, :class => "text_field" %></div>
		  </div>

			<div class="group wat-cf">
			  <div class="left"><%= f.label :password, :class => "label right" %></div>
			  <div class="right"><%= f.password_field :password, :class => "text_field" %></div>
		  </div>

		  <% if devise_mapping.rememberable? -%>
		    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
		  <% end -%>

		  <div class="group navform wat-cf">
		    <div class="right">
		    	<button class="button" type="submit">
    				<%= image_tag("web-app-theme/icons/key.png") %>Login
  				</button>
		    </div>
		  </div>  	
		<% end %>                  
	</div>
</div>
<%= render :partial => "devise/shared/links" %>